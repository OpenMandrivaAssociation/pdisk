+	kHFSPlusCreator   = 0x6866732B   /* 'hfs+' */
+};
+
+
+/* Unicode strings are used for HFS Plus file and folder names */
+struct HFSUniStr255 {
+	u_int16_t	length;		/* number of unicode characters */
